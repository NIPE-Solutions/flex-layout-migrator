{
  "compilerOptions": {
    "target": "ESNext",
    "types": ["node", "jest"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "paths": {
      "@util/*": ["src/util/*"],
      "@lib/*": ["src/lib/*"]
    }
  },
  "include": ["./src/**/*.ts", "src/main.ts"],
  "exclude": ["node_modules", "**/*.test.*", "**/__mocks__/*", "**/__tests__/*"]
}
