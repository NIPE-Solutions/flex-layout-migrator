{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": "./",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "paths": {
      "@util/*": ["./src/util/*"]
    }
  },
  "include": ["./src/**/*.ts", "src/main.ts"],
  "exclude": ["node_modules"]
}
